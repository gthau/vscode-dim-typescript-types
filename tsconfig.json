{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false,
  }
}
